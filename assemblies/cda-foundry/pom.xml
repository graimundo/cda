<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>pentaho</groupId>
    <artifactId>cda-plugin-assemblies</artifactId>
    <version>9.0.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>cda-foundry</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>com.pentaho.di</groupId>
      <artifactId>pdi-core-ee</artifactId>
      <version>9.0.0.0-SNAPSHOT</version>
      <type>zip</type>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>add-pdi-core-ee</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>pdi-core-ee</includeArtifactIds>
              <outputDirectory>${project.build.directory}/pdi-core-ee</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-scale-and-spoon</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/pdi-core-ee/data-integration</outputDirectory>
              <resources>
                <resource>
                  <directory>src/resources</directory>
                  <includes>
                    <include>Scale.bat</include>
                    <include>scale.sh</include>
                    <include>Spoon.bat</include>
                    <include>spoon.sh</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
